BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
            multiline: False
            on_text_validate: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: "Up"
                on_press: app.handle_increment()
            Button:
                text: "Down"
                on_press: app.handle_decrement()
    # Button:
    #     text: 'Convert Miles to Kilometers'
    #     on_press: app.handle_convert()
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
        text: app.kilometers
        
